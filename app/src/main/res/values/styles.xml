<resources>
      <!-- ======================= 
    =======TextAppearance =======
    ======================== -->
    <!-- NEW TEXT SYSTEM -->

    <style name="Typography.Title1" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Typography.Title2" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/museo_700</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:paddingBottom">1sp</item>
    </style>

    <style name="Typography.Title3" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/museo_700</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:paddingBottom">1sp</item>
    </style>

    <style name="Typography.Title3.Emerald" >
        <item name="android:textColor">@color/emerald</item>
    </style>

    <style name="Typography.Subhead" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_4</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:paddingBottom">2sp</item>
    </style>

    <style name="Typography.Body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="Typography.Body1.SingleLine">
        <item name="android:paddingBottom">0sp</item>
    </style>

    <style name="Typography.Body2" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_4</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:paddingBottom">4sp</item>
    </style>

    <style name="Typography.Body2.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Body2.Bold">
        <item name="android:textColor">@color/emerald</item>
        <item name="android:fontFamily">@font/museo_700</item>
    </style>

    <style name="Typography.Body2.Dark.Bold">
        <item name="android:fontFamily">@font/museo_700</item>
    </style>

    <style name="Typography.Body2.Italic">
        <item name="android:fontFamily">@font/museo_500_italic</item>
    </style>

    <style name="Typography.Caption" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_4</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:paddingBottom">2sp</item>
    </style>

    <style name="Typography.Caption.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Caption.Emerald">
        <item name="android:textColor">@color/emerald</item>
    </style>

    <style name="Typography.Caption.Dark.Bold">
        <item name="android:fontFamily">@font/museo_700</item>
    </style>

    <style name="Typography.Caption.Emerald.Bold">
        <item name="android:fontFamily">@font/museo_700</item>
    </style>

    <style name="Typography.Button" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/emerald</item>
        <item name="android:fontFamily">@font/museo_700</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>

    </style>

    <style name="Typography.Button.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:paddingBottom">2sp</item>
    </style>

    <style name="Typography.BottomNavigation" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/museo</item>
    </style>

    <style name="Typography.BottomNavigation.Selected" />

</resources>
